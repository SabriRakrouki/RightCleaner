<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".SimpleUserHomePage">

    <Button
        android:id="@+id/HouseCleaningBtn"
        android:layout_width="165dp"
        android:layout_height="68dp"

        android:layout_marginEnd="24dp"
        android:layout_marginBottom="484dp"
        android:background="@drawable/victore_button"
        android:text="House Cleaning"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.554"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/ElectricianBtn"
        android:layout_width="165dp"
        android:layout_height="68dp"

        android:layout_marginEnd="24dp"
        android:layout_marginBottom="300dp"
        android:background="@drawable/victore_button"
        android:text="Electrician"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/HouseCleaningBtn"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/HouseCleaningBtn"
        app:layout_constraintTop_toBottomOf="@+id/GardenerBtn"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:id="@+id/GardenerBtn"
        android:layout_width="165dp"
        android:layout_height="68dp"

        android:layout_marginTop="51dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="424dp"
        android:background="@drawable/victore_button"
        android:text="Gardener"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/HouseCleaningBtn"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/HouseCleaningBtn"
        app:layout_constraintTop_toBottomOf="@+id/HouseCleaningBtn"
        app:layout_constraintVertical_bias="0.559" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Click the service you want"
        android:textColor="#2196F3"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="@+id/HouseCleaningBtn"
        app:layout_constraintStart_toStartOf="@+id/HouseCleaningBtn"
        tools:layout_editor_absoluteY="73dp" />

</androidx.constraintlayout.widget.ConstraintLayout>