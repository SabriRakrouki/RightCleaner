<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".ServiceProviderSignUpPage">

  <TextView
      android:id="@+id/textView5"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="156dp"
      android:layout_marginTop="40dp"
      android:layout_marginEnd="153dp"
      android:text="Sign Up"
      android:textColor="#2196F3"
      android:textSize="30sp"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.0"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent" />

  <EditText
      android:id="@+id/usernameService"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="32dp"
      android:background="@drawable/victore_input_text"
      android:ems="10"
      android:hint="Username"
      android:inputType="textPersonName"
      app:layout_constraintEnd_toEndOf="@+id/textView5"
      app:layout_constraintStart_toStartOf="@+id/textView5"
      app:layout_constraintTop_toBottomOf="@+id/textView5" />

  <EditText
      android:id="@+id/passwordService"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="24dp"
      android:background="@drawable/victore_input_text"
      android:ems="10"
      android:hint="Password"
      android:inputType="textPassword"
      android:paddingLeft="10px"
      app:layout_constraintEnd_toEndOf="@+id/usernameService"
      app:layout_constraintHorizontal_bias="0.0"
      app:layout_constraintStart_toStartOf="@+id/usernameService"
      app:layout_constraintTop_toBottomOf="@+id/usernameService" />

  <EditText
      android:id="@+id/emailService"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="24dp"
      android:background="@drawable/victore_input_text"
      android:ems="10"
      android:hint="Email"
      android:inputType="textEmailAddress"
      android:paddingLeft="10px"
      app:layout_constraintEnd_toEndOf="@+id/usernameService"
      app:layout_constraintHorizontal_bias="1.0"
      app:layout_constraintStart_toStartOf="@+id/usernameService"
      app:layout_constraintTop_toBottomOf="@+id/passwordService" />

  <EditText
      android:id="@+id/phoneService"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="24dp"
      android:background="@drawable/victore_input_text"
      android:ems="10"
      android:hint="Phone number"
      android:inputType="phone"
      android:paddingLeft="10px"
      app:layout_constraintEnd_toEndOf="@+id/usernameService"
      app:layout_constraintHorizontal_bias="0.0"
      app:layout_constraintStart_toStartOf="@+id/usernameService"
      app:layout_constraintTop_toBottomOf="@+id/emailService" />

  <EditText
      android:id="@+id/priceService"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="24dp"
      android:background="@drawable/victore_input_text"
      android:ems="10"
      android:hint="Price"
      android:inputType="number"
      android:paddingLeft="10px"
      app:layout_constraintEnd_toEndOf="@+id/passwordService"
      app:layout_constraintHorizontal_bias="1.0"
      app:layout_constraintStart_toStartOf="@+id/passwordService"
      app:layout_constraintTop_toBottomOf="@+id/service" />

  <TextView
      android:id="@+id/textView6"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="120dp"
      android:text="Login if you have existing account"
      android:textColor="#2196F3"
      app:layout_constraintEnd_toEndOf="@+id/usernameService"
      app:layout_constraintHorizontal_bias="1.0"
      app:layout_constraintStart_toStartOf="@+id/usernameService"
      app:layout_constraintTop_toBottomOf="@+id/service" />

  <Button
      android:id="@+id/btnSignupService"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="20dp"
      android:background="@drawable/victore_button"
      android:text="Sign up"
      app:layout_constraintEnd_toEndOf="@+id/usernameService"
      app:layout_constraintHorizontal_bias="0.333"
      app:layout_constraintStart_toStartOf="@+id/usernameService"
      app:layout_constraintTop_toBottomOf="@+id/textView6" />

  <Spinner
      android:id="@+id/service"
      android:layout_width="211dp"
      android:layout_height="50dp"
      android:layout_marginTop="20dp"
      app:layout_constraintEnd_toEndOf="@+id/usernameService"
      app:layout_constraintHorizontal_bias="0.0"
      app:layout_constraintStart_toStartOf="@+id/usernameService"
      app:layout_constraintTop_toBottomOf="@+id/phoneService" />
</androidx.constraintlayout.widget.ConstraintLayout>
